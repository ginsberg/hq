<head>
	
	<title><%= h(yield(:title) || "Untitled") %></title>
	
	<meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
	
	<%= javascript_include_tag :defaults, :cache => true %>
	<%= ajaxful_rating_style %>
	

	<link href="/stylesheets/main.css" media="screen,projection" rel="stylesheet" type="text/css">
	<link href="/stylesheets/print.css" media="print" rel="stylesheet" type="text/css">
	<link href="/stylesheets/blue-theme.css" media="screen,projection" rel="stylesheet" type="text/css" />
	<link href="/stylesheets/custom.css" media="screen,projection" rel="stylesheet" type="text/css">
	<link href="/stylesheets/gallery.css" media="screen,projection" rel="stylesheet" type="text/css">

	<!--[if lte IE 6]>
	<script type="text/javascript" src="http://js.createsend.com/js/plugins/supersleight-min.js?201005111330"></script>
