<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">

<head>
	
	<title><%= h(yield(:title) || "Untitled") %></title>
	
	<meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
	
	<%= javascript_include_tag :defaults, :cache => true %>
	<%= ajaxful_rating_style %>
	

	<link href="/stylesheets/main.css" media="screen,projection" rel="stylesheet" type="text/css">
	<link href="/stylesheets/print.css" media="print" rel="stylesheet" type="text/css">
	<link href="/stylesheets/blue-theme.css" media="screen,projection" rel="stylesheet" type="text/css" />
	<link href="/stylesheets/gallery.css" media="screen,projection" rel="stylesheet" type="text/css">
	<link href="/stylesheets/custom.css" media="screen,projection" rel="stylesheet" type="text/css">
	

	<!--[if lte IE 6]>
	<script type="text/javascript" src="http://js.createsend.com/js/plugins/supersleight-min.js?201005111330"></script>
	<![endif]-->

</head>

<body class="campaignindex">

	<div id="adminNavsWrapper">
	
		<div class="adminNavs">
			<ul>
				<li><a href="/admin/account/"><span>Account Settings</span></a></li>
			</ul>
		</div>
		
		<div class="adminNavs adminRight">
			<ul>
				<li><a href="/help/category.aspx&#63;c&#61;1&#38;t&#61;33"><span>Help</span></a></li>
				<li><a href="/logout"><span>Logout</span></a></li>
			</ul>
		</div>

    		<div class="clear"></div>
	</div><!-- adminNavsWrapper -->

			<div class="clear"></div>
			

<div id="case">
	
	<div class="shadowHeader">
		<div class="navheaderleft">
			<div class="shadowMidLeft">
				<div class="navheader">
	
					<div id="header">
						
						<div id="searchBox">
							<% form_tag sku_find_path, :id => 'search' do %>
							  <%= text_field :search, :sku %>
							<% end -%>
							<span>SKU or <strike>Text Search</strike></span>
							<!-- Auto focus on search box on load -->
							<script type="text/javascript" language="JavaScript">
							document.forms['search'].elements['search_sku'].focus();
							</script>
							
						</div>
						<h1><a href="&#47;admin&#47;">Scott HQ</a></h1>
						
						<div id="primaryNavs">
								
								<%= render_navigation(:level => 1) %>
								
							</div><!-- primaryNavs -->
						<div class="clearMyHead"></div>
						
					</div><!-- header -->
 
				</div><!-- navheader -->
			</div><!-- shadowMidLeft -->
		</div><!-- navheaderleft -->
	</div><!-- shadowHeader -->


	<div class="shadowWrap">
		<div class="shadowMidLeft">
			<div class="shadowMidContent">
	
				<div id="subNavs">
					<%= render_navigation(:level => 2) %>
						<div class="clear"></div>
				</div><!-- subNavs -->
				
					<div id="mainContentWrapper">
						
						<div class="twocol">
								
							<div id="content">

								<div id="leftcol">
									
									<p class="bread">
										<%= yield :breadcrumbs %>
									</p>
									

										<div style="border-bottom: 1px solid #EEE; padding-bottom: 0; margin-bottom:10px;">
											<div class="campaignActions" style="margin-top: 24px;">
												<%= yield :campaignActions %>
											</div>
											<h1 id="campaignTitle"><%= h(yield(:title) || "Untitled") %></h1>
											<p class="titleSummary" style="padding-bottom: 10px !important;">
												<%= yield :titleSummary %>
											</p>
										</div>

										<%= flash_helper %>

										<%= yield %>

								</div><!-- leftcol -->

								<div id="rightcol">
									
										<%= yield :sidebar %>

								</div><!-- rightcol -->
									
									<div class="clear"></div>		
							
							</div><!-- content -->

						</div><!-- twocol -->
				
					</div><!--mainContentWrapper -->
					
			</div><!--shadowMidContent -->
		</div><!-- shadowMidLeft -->
	</div><!-- shadowWrap -->
	
	<div class="shadowBottomLeft">
		<div class="shadowMidLeft"></div>
	</div>

</div><!-- case -->

</body>
</html>
